<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_14sdp"
        android:background="@color/white"
        tools:context=".ui_section.otp_section.ActivityOtp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_300sdp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/old_img" />

        <TextView
            android:id="@+id/tv_otp_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_logo"
            android:gravity="center"
            android:text="@string/enter_otp"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp" />

        <TextView
            android:id="@+id/tv_otp_info"
            android:layout_below="@id/tv_otp_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/enter_otp_info"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"
            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/il_phone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:hint="@string/hint_enter_mobile"
                    android:importantForAutofill="no"
                    android:inputType="number|phone"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:minLines="10"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_logo"
                android:gravity="center"
                android:text="Didn't receive the OTP? Resend "
                android:textColor="@color/black"
                android:padding="@dimen/_6sdp"
                android:textSize="@dimen/_13ssp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/verify"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>
</layout>